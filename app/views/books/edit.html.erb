<h1>edit</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <form>
    <div>
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Update Book'%>
    </div>
  </form>
<% end %>
<%= link_to "Show" ,book_path(@book.id)%> | <%= link_to "Back" ,books_path %>